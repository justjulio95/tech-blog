<div class="container container-fluid">
  <form class="login-form">
    <fieldset>
      <div class="form-group login">
        <label for="email-login" class="form-label mt-4">Email Address</label>
        <input type="text" class="form-control" id="email-login" placeholder="Enter Email">
      </div>
      <div class="form-group login">
        <label for="password-login" class="form-label mt-4">Password</label>
        <input type="password" class="form-control" id="password-login" placeholder="Password" />
      </div>
      <div>
        <button type="submit" class="btn btn-outline-primary mt-2">Login</button>
      </div>
    </fieldset>
  </form>

  <form class="signup-form">
    <fieldset>
      <div class="form-group login">
        <label for="username-signup" class="form-label mt-4">Username</label>
        <input type="text" class="form-control" id="username-signup" placeholder="Username">
      </div>
      <div class="form-group login">
        <label for="email-signup" class="form-label mt-4">Email Address</label>
        <input type="text" class="form-control" id="email-signup" placeholder="Enter Email">
      </div>
      <div class="form-group login">
        <label for="password-signup" class="form-label mt-4">Password</label>
        <input type="password" class="form-control" id="password-signup" placeholder="Password" />
      </div>
      <div>
        <button type="submit" class="btn btn-outline-primary mt-2">Signup</button>
      </div>
    </fieldset>
  </form>
</div>

<script src="/javascript/login.js"></script>