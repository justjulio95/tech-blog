<article>
  <div class="card-header">
    <a href="/post/{{post.id}}" class="card-title">{{post.title}}</a>
  </div>
  <div class="card-body">
    {{post.description}}
  </div>
  <div class="meta">
    {{post.vote_count}} point(s) by {{post.user.username}} on {{post.created_at}} |
    {{post.comments.length}} comment(s)
  </div>
</article>

{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body" style="width: 25rem; height: 8rem"></textarea>
  </div>

  <div>
    <button type="submit" class="btn btn-primary">add comment</button>
    <button type="button" class="btn btn-secondary upvote-btn">upvote</button>
  </div>
</form>
{{/if}}

<div class="comments">
  {{#each post.comments}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/upvote.js"></script>
{{/if}}