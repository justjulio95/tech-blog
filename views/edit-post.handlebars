<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div class="form-group login">
      <label for="post-title" class="form-label mt-4">Title</label>
      <input name="post-title" type="text" class="form-control" value="{{post.title}}" />
    </div>
    <div class="form-group login">
      <label for="description" class="form-label mt-4">Description</label>
      <textarea type="text" id="edit-description" name="description" class="form-control">{{post.description}}</textarea>
    </div>
    <div>
      {{post.vote_count}} {{format_plural "point" post.vote_count}} by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="btn btn-primary">Save post</button>
    <button type="button" class="delete-post-btn btn btn-danger">Delete post</button>
  </form>
</article>

<form class="comment-form mt-5">
  {{> comments post.comments}}
</form>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>